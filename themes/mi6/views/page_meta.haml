%section.meta-info
  %ul
    %li
      %i.fa.fa-user
      = page.metadata('Author') || 'Andr√© Drougge'
    %li
      %i.fa.fa-clock-o
      = page.metadata('Date')
    %li
      %i.fa.fa-tags
      - if (!page.categories.empty?)
        - page.categories.each do |category|
          - if category != page.categories[-1]
            = succeed ',' do
              %a(href="#{category.abspath}")= category.link_text
          - else
            %a(href="#{category.abspath}")= category.link_text